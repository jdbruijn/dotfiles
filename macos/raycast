#!/bin/sh
#
# Configure Raycast, https://www.raycast.com/.

configure() {
  echo ' INFO: configure Raycast'

  . "${DOTFILES}/macos/disable-keyboard-shortcut"
  disable_keyboard_shortcut 'raycast' 64 'âŒ˜Space'
  disable_keyboard_shortcut 'raycast' 65 'âŒ¥âŒ˜Space'

  disable_keyboard_shortcut 'raycast' 233 'âŒ˜M'
  disable_keyboard_shortcut 'raycast' 237 'âŒƒğŸŒF'
  disable_keyboard_shortcut 'raycast' 238 'âŒƒğŸŒC'
  disable_keyboard_shortcut 'raycast' 239 'âŒƒğŸŒR'
  disable_keyboard_shortcut 'raycast' 240 'âŒƒğŸŒâ†'
  disable_keyboard_shortcut 'raycast' 241 'âŒƒğŸŒâ†’'
  disable_keyboard_shortcut 'raycast' 242 'âŒƒğŸŒâ†‘'
  disable_keyboard_shortcut 'raycast' 243 'âŒƒğŸŒâ†“'
  disable_keyboard_shortcut 'raycast' 248 'â‡§âŒƒğŸŒâ†'
  disable_keyboard_shortcut 'raycast' 249 'â‡§âŒƒğŸŒâ†’'
  disable_keyboard_shortcut 'raycast' 250 'â‡§âŒƒğŸŒâ†‘'
  disable_keyboard_shortcut 'raycast' 251 'â‡§âŒƒğŸŒâ†“'

  # Configure the hotkey âŒ˜Space for opening Raycast.
  defaults write com.raycast.macos raycastGlobalHotkey -string 'Command-49'
}

configure
killall -q Raycast
sleep 1 && open -a Raycast && sleep 1
